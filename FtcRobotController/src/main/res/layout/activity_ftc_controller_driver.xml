<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FtcRobotControllerActivity"
    android:focusable="true"
    android:id="@+id/entire_screen"
    android:orientation="vertical">

  <include layout="@layout/device_name"
           android:id="@+id/device_name_header"/>

    <include layout="@layout/header"
           android:id="@+id/included_header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

      <LinearLayout
          android:id="@+id/sensors"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <EditText
              android:id="@+id/sensor_1"
              android:layout_width="96dp"
              android:layout_height="wrap_content"/>

          <EditText
              android:id="@+id/sensor_2"
              android:layout_width="94dp"
              android:layout_height="wrap_content"/>

          <EditText
              android:id="@+id/sensor_3"
              android:layout_width="104dp"
              android:layout_height="wrap_content"/>
      </LinearLayout>

      <Button
          android:id="@+id/send_button"
          android:layout_width="wrap_content"
          android:layout_height="63dp"
          android:layout_below="@+id/sensors"
          android:text="Send" />

      <TextView
          android:id="@+id/telemetry"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:layout_below="@+id/send_button"
          android:text="telemetry"/>



      <TextView
          android:id="@+id/textErrorMessage"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/telemetry"
          android:textColor="#990000"
          android:textStyle="bold"
          android:minLines="2"
          android:maxLines="4"
          android:text="" />


</RelativeLayout>

</LinearLayout>